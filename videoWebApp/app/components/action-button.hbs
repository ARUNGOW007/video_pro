<div class="action-button">
  <button type="button" id="play-pause-btn" {{on "click" this.playVideo}}>{{if this.isPlaying "Pause" "Play"}}</button>
  <button type="button" id="prev-btn" {{on "click" this.rewind}}>Prev</button>
  <button type="button" id="skip-btn" {{on "click" this.skip}}>Skip</button>
  <button type="button" id="reverse-btn" {{on "click" this.toggleReverse}}>
    {{this.reverseButtonLabel}}
  </button>
    <button type="button" {{on "click" this.toggleDropdown }} id="speed-btn">
      Speed: {{this.selectedSpeed}}x
    </button>
    {{#if this.isDropdown}}
      <div class="dropdown">
        {{#each this.speedOptions as |speed|}}
          <button
            type="button"
            id="{{speed}}-speed"
            {{on "click" (fn this.speed speed)}}
            class="{{if (fn this.isSelected speed) 'selected'}}">
            {{speed}}x
          </button>
        {{/each}}
      </div>
    {{/if}}
</div>

<style>
  .action-button {
    margin-left: 10px;
  }

  .action-button button {
    margin-left: 20px;
    display: inline-block;
  }

  #play-pause-btn {
    width: 60px;
  }

  #speed-btn {
    width: 95px;
  }

  #reverse-btn {
    width: 105px;
  }

  .dropdown {
    display: flex;
    position: absolute;
    background-color: white;
    border: 1px solid #ccc;
    border-radius: 5px;
    bottom: 110%;
    left: 70%;
    padding: 5px;
  }

  .dropdown button {
    background-color: white;
    color: black;
    border: none;
    padding: 10px;
    font-size: 14px;
    cursor: pointer;
  }

  .dropdown button:hover {
    background-color: #f1f1f1;
  }
</style>