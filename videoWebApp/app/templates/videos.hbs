{{page-title "Video Explorer"}}
<h1>Video Explorer</h1>
<div class="video-list">
  {{#each @model as |video|}}
    <LinkTo @route="view" @model={{video.name}}>
      <div class="video-item">
        <canvas id="canvas-{{video.name}}" class="thumbnail-canvas"></canvas>
        {{remove-extension video.name}}
      </div>
    </LinkTo>
  {{/each}}
</div>

<style>
  body {
    font-family: Arial, sans-serif;
    background-color: mintcream;
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    color: black;
  }

  .video-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 30px;
    padding: 30px;
  }

  .video-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: white;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    border-color: black;
    transition: transform 0.3s ease;
  }

  .video-item:hover {
    transform: scale(1.05);
  }

  .thumbnail-canvas {
    width: 100%;
    height: 280px;
  }

  h1 {
    text-align: center;
    margin: 30px 0;
    color: black;
  }
</style>
