<h1>{{remove-extension @model.name}}</h1>
<div id="video-container">
  <video id="video-player" controls muted>
    <source src="{{@model.url}}" type="video/mp4">
  </video>
  <div class="controls">
    <ActionButton/>
  </div>
</div>

<style>
  body {
    background-color: rgb(30, 31, 34);
  }
  h1 {
    max-height: 100vh;
    padding: 3px;
    background-color: #3977c3;
    text-align: center;
    color: white;
  }
  video {
    margin-top: -100px;
    margin-left: 14.5%;
    width: 1080px;
    height: 1080px;
    max-height: 100vh;
    max-width: 100%;
  }

  .controls {
    position: absolute;
    bottom: 40px;
    left: 15%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 10;
    margin-right: 30px;
  }
  .controls button {
    padding: 10px;
    font-size: 14px;
    cursor: pointer;
    background-color: #007ade;
    color: white;
    border: none;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }
  .controls button:hover {
    background-color: #2900ff;
    color: white;
  }
  .controls button:active {
    background-color: green;
  }
  #video-container {
    background-color: rgb(30, 31, 34);
    display: block;
  }
</style>
